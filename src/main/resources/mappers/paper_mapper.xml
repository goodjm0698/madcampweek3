<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="madcamp.second.mapper.PaperMapper">

    <resultMap id="PaperResultMap" type="Paper">
        <id property="id" column="id" />
        <result property="senderId" column="sender_id" />
        <result property="text" column="text" />
        <result property="farmId" column="farm_id" />
    </resultMap>

    <select id="getPaperListWithFarm" resultMap="PaperResultMap">
        SELECT *
        FROM paper
        WHERE farm_id = #{farmId}
    </select>

    <select id="getPaperById" resultMap="PaperResultMap">
        SELECT *
        FROM paper
        WHERE id = #{id}
    </select>

    <insert id="createPaper">
        INSERT INTO paper (id, farm_id, text, sender_id)
        VALUES (#{id}, #{farmId}, #{text}, #{senderId})
    </insert>

</mapper>