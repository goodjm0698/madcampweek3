<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="madcamp.second.mapper.LetterMapper">

    <resultMap id="LetterResultMap" type="Letter">
        <id property="id" column="id" />
        <result property="senderId" column="sender_id" />
        <result property="receiverId" column="receiver_id" />
        <result property="text" column="text" />
        <result property="generatedDate" column="generated_date" />
        <result property="openDate" column="open_date" />
        <result property="isAno" column="is_ano" />
        <result property="posX" column="pos_x" />
        <result property="posY" column="pos_y" />
        <result property="imgType" column="img_type" />
    </resultMap>

    <select id="getLettersBySender" resultType="Long">
        SELECT id
        FROM letter
        WHERE sender_id = #{senderId}
    </select>

    <select id="getLettersByReceiver" resultMap="LetterResultMap">
        SELECT *
        FROM letter
        WHERE receiver_id = #{receiverId}
    </select>

    <select id="getLetterById" resultMap="LetterResultMap">
        SELECT *
        FROM letter
        WHERE id = #{id}
    </select>

    <insert id="createLetter">
        INSERT INTO letter
            (id, sender_id, receiver_id, text, generated_date, open_date, is_ano, pos_x, pos_y, img_type)
        VALUES
            (#{id}, #{senderId}, #{receiverId}, #{text}, #{generatedDate}, #{openDate}, #{isAno}, #{posX}, #{posY}, #{imgType})
    </insert>

    <!--
    <update id="updateLetter">
        UPDATE letter
        SET text = #{text},
            open_date = #{openDate},
            is_ano = #{isAno}
        WHERE id = #{id}
    </update>

    <delete id="withdrawLetter">
        DELETE
        FROM letter
        WHERE id=#{id}
    </delete>
    -->
</mapper>